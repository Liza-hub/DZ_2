#include <stdio.h>
#include <conio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#include "Header.h"


float f1(float x)
{
	return powf(2, x) / x;
}
float f2(float x)
{
	return x * (x - 1);
}
float INTPRG(float (*ptr)(float), int a, int b, float n)
{
	float S = 0;
	float d = 0, x;
	int i;
	d = (b - a) / n;
	x = a;
	for (i = 1; i <= n; i++)
	{
		S = S + ptr(x);
		x = x + d;
	}
	S = S * d;
	return S;
}
